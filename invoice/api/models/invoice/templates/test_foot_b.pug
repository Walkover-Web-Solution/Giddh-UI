doctype html
html
  head
    title
    style(type='text/css').
      @font-face {
      font-family: 'calibri';
      src: url(Calibri.ttf);
      }
      p {
      font-weight: normal;
      margin: 0;
      }
      table {
      font-family: 'calibri';
      font-weight: normal;
      font-size: 16px;
      color: #262626;
      border-top: 0;
      position: relative;
      table-layout: fixed;
      width: 100%;
      max-width: 1000px;
      margin: 0 auto;
      z-index: 1;
      }
      img {
      width: auto;
      float: right;
      max-width: 200px;
      }
      table th {
      text-align: left;
      padding: 20px 0;
      color: #737373;
      border-bottom: 1px solid #595959;
      }
      table th h2 {
      color: #737373;
      }
      table th,
      table td {
      font-family: inherit;
      vertical-align: -webkit-baseline-middle;
      padding: 3px 0;
      }
      h2, h4 {
      font-weight: normal;
      margin-bottom: 0;
      }
      h2,h4 {
      color: #262626;
      }
      .grey {
      color: #a6a6a6;
      }
      .nopd {
      padding: 0;
      }
      .underline {
      border-bottom: 1px solid #000;
      padding-bottom: 3px;
      }
      @page {
      size: A4;
      margin: 11mm 17mm 17mm 17mm;
      }
      @media print {
      tfoot {
      position: fixed;
      bottom: 0;
      }
      td, p {
      page-break-inside: avoid;
      }
      html, body {
      width: 210mm;
      height: 297mm;
      }
      }
