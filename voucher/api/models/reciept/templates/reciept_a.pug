doctype html
html
  head
    title
    style(type='text/css').
      @font-face {
      font-family: 'calibri';
      src: url(Calibri.ttf);
      }
      p {
      font-weight: normal;
      margin: 0;
      }
      table {
      font-family: 'calibri';
      font-weight: normal;
      font-size: 12px;
      color: #262626;
      border-top: 0;
      position: relative;
      table-layout: fixed;
      width: 100%;
      max-width: 1000px;
      margin: 0 auto;
      z-index: 1;
      }
      img {
      width: auto;
      float: right;
      max-width: 200px;
      }
      table th {
      text-align: left;
      padding: 20px 0;
      color: #737373;
      border-bottom: 1px solid #595959;
      }
      table th h2 {
      color: #737373;
      }
      table th,
      table td {
      font-family: inherit;
      vertical-align: -webkit-baseline-middle;
      padding: 3px 0;
      }
      h2, h4 {
      font-weight: normal;
      margin-bottom: 0;
      }
      h2,h4 {
      color: #262626;
      }
      .grey {
      color: #a6a6a6;
      }
      .nopd {
      padding: 0;
      }
      .underline {
      border-bottom: 1px solid #000;
      padding-bottom: 3px;
      }
      @page {
      size: A4 landscape;
      margin: 11mm 17mm 17mm 17mm;
      }
      @media print {
      td, p {
      page-break-inside: avoid;
      }
      }
  body
    table(cellspacing='0')
      thead
        tr
          th(colspan='7')
            h2 #{voucherType} VOUCHER # #{voucherNumber}
            p #{voucherDate}
          th(colspan='3')
            if(logo!='')
              img(src=logo)
      tbody
        tr
          td(colspan='9')
            h2(style='margin-bottom: 20px;') Thank you,
        tr
          td(colspan='9' ) #{accountName}
        if(attentionTo != '')
          if(attentionTo != null)
            tr
              td.grey(colspan='9') Att :#{attentionTo}   
        each detail in accountDetailsArray
          if(detail!='')
            if(detail!=null)
              tr
                td.grey(colspan='9' ) #{detail}
        tr
          td(colspan='9')
            h4
              | For your payment of #{grandTotal}/- .
            if (chequeNumber!='')
              if(chequeNumber!=null) 
                |via cheque number #{chequeNumber}.
            |Your net amount due is INR #{accountClosingBalance}/-
        tr
          td(colspan='9')
            h2 Detail
        tr
          td(colspan='9')
            p Your gross amount is INR #{subTotal} + tax of INR #{taxTotal} = total of INR #{grandTotal}/-
        tfoot
          tr
            td(style='padding-top:20px',colspan='9') #{companyName}
          each data in addressDetailsArray
            if(data!='')
              if(data!=null)
                tr
                  td.grey(colspan='5')
                    | #{data}                 
          tr
            td.grey(colspan='9')
              p #{companyIdentitiesData}
