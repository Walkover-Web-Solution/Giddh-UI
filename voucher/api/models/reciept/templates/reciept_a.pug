doctype html
html
  head
    title
    style(type='text/css').
      @font-face {
      font-family: 'calibri';
      src: url(Calibri.ttf);
      }
      p {
      font-weight: normal;
      margin: 0;
      }
      table {
      font-family: 'calibri';
      font-weight: normal;
      font-size: 16px;
      color: #262626;
      border-top: 0;
      position: relative;
      table-layout: fixed;
      width: 100%;
      max-width: 1000px;
      margin: 0 auto;
      z-index: 1;
      }
      img {
      width: auto;
      float: right;
      max-width: 200px;
      }
      table th {
      text-align: left;
      padding: 20px 0;
      color: #737373;
      border-bottom: 1px solid #595959;
      }
      table th h2 {
      color: #737373;
      }
      table th,
      table td {
      font-family: inherit;
      vertical-align: -webkit-baseline-middle;
      padding: 3px 0;
      }
      h2, h4 {
      font-weight: normal;
      margin-bottom: 0;
      }
      h2,h4 {
      color: #262626;
      }
      .grey {
      color: #a6a6a6;
      }
      .nopd {
      padding: 0;
      }
      .underline {
      border-bottom: 1px solid #000;
      padding-bottom: 3px;
      }
      @page {
      size: A4;
      margin: 11mm 17mm 17mm 17mm;
      }
      @media print {
      tfoot {
      position: fixed;
      bottom: 0;
      }
      td, p {
      page-break-inside: avoid;
      }
      html, body {
      width: 210mm;
      height: 297mm;
      }
      }
  body
    table(cellspacing='0')
      thead
        tr
          th(colspan='7')
            h2 RECEIPT VOUCHER #2017-25
            p March 20, 2017
          th(colspan='3')
            if(logo!='')
              img(src=logo)
      tbody
        tr
          td(colspan='9')
            h2(style='margin-bottom: 20px;') Thank you,
        tr
          td(colspan='9') #{accountName}
        tr
          td.grey.nopd(colspan='9') 
        tr
          td.grey.nopd(colspan='9') Att: #{attentionTo}
        tr
          td.grey.nopd(colspan='9') #{accountEmail}, #{accountMobileNumber}
        tr
          td(colspan='9')
            h4
              | for your payment of INR 7000/- via 
              span.underline cheque number #{chequeNumber}
              | . Your net amount due is INR 1250/-
        tr
          td(colspan='9')
            h2 Detail
        tr
          td(colspan='9')
            p Your gross amount is INR 7260.87 + tax of INR #{taxTotal} = total of INR #{grandTotal}
        tfoot
          tr
            td(colspan='9') #{companyName}
          tr
            td.grey(colspan='3')
              | 405-406, Capt. C. S. Naydu Arcade, 10/2,
              br
              |  Old Palasia, near Greater Kailash Hospital, 
              br
              | #{companyCity} #{companyPincode} (#{companyState})
          tr
            td(colspan='9')
              h4.grey CIN: U72400MP2010PTC023806, STC: AAACW9768LSD001, PAN: AAACW9768L
